{
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": ".",
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/routes/$1" },
    { "src": "/mobile/(.*)", "dest": "/public/mobile/$1" },
    { "src": "/admin/(.*)", "dest": "/public/admin/$1" },
    { "src": "/member/(.*)", "dest": "/public/member/$1" },
    { "src": "/shared/(.*)", "dest": "/public/shared/$1" },
    { "src": "/assets/(.*)", "dest": "/public/desktop/assets/$1" },
    { "src": "/about", "dest": "/public/desktop/about.html" },
    { "src": "/projects", "dest": "/public/desktop/projects.html" },
    { "src": "/csr", "dest": "/public/desktop/csr.html" },
    { "src": "/donate", "dest": "/public/desktop/donation.html" },
    { "src": "/join", "dest": "/public/mobile/join.html" },
    { "src": "/privacy", "dest": "/public/desktop/privacy.html" },
    { "src": "/terms", "dest": "/public/desktop/terms.html" },
    { "src": "/payment-success", "dest": "/public/desktop/payment-success.html" },
    { "src": "/(.*\\.html)", "dest": "/public/desktop/$1" },
    { "src": "/", "dest": "/public/desktop/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
