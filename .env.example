# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Connection String (for serverless API handlers)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fwf?retryWrites=true&w=majority

# ============================================
# EMAIL SERVICE CONFIGURATION
# ============================================

# SMTP Server Details
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email Sender Address
MAIL_FROM=noreply@fwf.org

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# JWT Secret Key (change this to a random strong string)
JWT_SECRET=your-very-secret-jwt-key-change-this-in-production

# Admin Credentials (change these immediately!)
ADMIN_USER=admin@fwf
ADMIN_PASS=Admin@12345

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Organization Prefix for Member IDs
ORG_PREFIX=FWF

# Site URL (update for production deployment)
SITE_URL=http://localhost:3000

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# Server Port (default: 3000)
PORT=3000

# ============================================
# DEPLOYMENT SETTINGS
# ============================================

# Node Environment (development/production)
NODE_ENV=development

# ============================================
# OPTIONAL CONFIGURATIONS
# ============================================

# Payment Gateway API Keys (if using)
# RAZORPAY_KEY_ID=your_razorpay_key
# RAZORPAY_KEY_SECRET=your_razorpay_secret

# Google Analytics Tracking ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking DSN
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
